<html>
  <head>
    <title>Place Autocomplete Address Form</title>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">

    <link type="text/css" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true&libraries=places"></script>
  </head>

  <body onload="search();geolocate();directions()">
    <div id="locationField">
      <input id="autocomplete" placeholder="Enter your address" type="text"></input>

      <button type="button" class="btn btn-default btn-sm" id="geolocate">
        <span class="glyphicon glyphicon-record" aria-hidden="true"> MyLocation</span>
      </button>

      <button type="button" class="btn btn-default btn-sm" id="find">
        <span class="glyphicon glyphicon-transfer" aria-hidden="true"> Directions</span>
      </button>

      <input id="origin" style="display: none" placeholder="Origin" type="text"></input>
      <button type="button" class="btn btn-default btn-sm" id="geolocateForDirections" style="display: none">
        <span class="glyphicon glyphicon-record" aria-hidden="true"> MyLocation</span>
      </button>

      <input id="destination" style="display: none"placeholder="Destination" type="text"></input>
      <button type="button" class="btn btn-default btn-sm" id="directions" style="display: none">
        <span class="glyphicon glyphicon-transfer" aria-hidden="true"> Directions</span>
      </button>
    </div>
  </body>
</html>


